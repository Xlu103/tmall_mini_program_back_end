<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmall.dao.IUserDao">

    <resultMap id="userMap" type="User">
        <id property="id" column="id"></id>
        <result property="username" column="username"></result>
        <result property="password" column="password"></result>
        <result property="phone" column="phone"></result>
        <result property="email" column="email"></result>
        <result property="wxId" column="wx_id"></result>
    </resultMap>

    <insert id="addUser" parameterType="User">
        insert into t_user(username, password, phone, email, wx_id)
        values (#{username}, #{password}, #{phone}, #{email}, #{wxId})
    </insert>

    <update id="updateUser">
        update t_user
        set username=#{username},
            password=#{password},
            email=#{email}
        where id = #{id};

    </update>
    <delete id="deleteUserById">
        delete
        from t_user
        where id = #{userId};
    </delete>

    <select id="findUserById" resultMap="userMap">
        select *
        from t_user
        where id = #{userId}
    </select>
    <select id="finAllUsers" resultMap="userMap">
        select *
        from t_user
    </select>

    <select id="findUserByNameAndPassword" resultMap="userMap">
        select *
        from t_user
        where password = #{password}
          and username = #{username}
    </select>

    <select id="findUserByName" resultType="java.lang.Integer">
        select count(*)
        from t_user
        where username = #{username}
    </select>

</mapper>