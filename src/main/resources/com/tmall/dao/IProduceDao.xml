<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmall.dao.IProduceDao">

    <resultMap id="produceMap" type="Produce">
        <id property="id" column="id"/>
        <result column="title" property="title"/>
        <result column="detail" property="detail"/>
        <result column="price" property="price"/>
        <result column="sales" property="sales"/>
        <result column="img" property="img"/>
        <result column="cat_id" property="catId"/>
    </resultMap>

    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.tmall.pojo.Produce" useGeneratedKeys="true">
        insert into t_produce (title, detail, price, stock, img)
        values (#{title,jdbcType=VARCHAR},
                #{detail,jdbcType=VARCHAR},
                #{price,jdbcType=DOUBLE},
                #{stock,jdbcType=INTEGER},
                #{img,jdbcType=VARCHAR})
    </insert>

    <update id="updateById" parameterType="com.tmall.pojo.Produce">
        update t_produce
        <set>
            <if test="title != null">
                title = #{title,jdbcType=VARCHAR},
            </if>
            <if test="detail != null">
                detail = #{detail,jdbcType=VARCHAR},
            </if>
            <if test="price != null">
                price = #{price,jdbcType=DOUBLE},
            </if>
            <if test="sales != null">
                sales = #{sales,jdbcType=INTEGER},
            </if>
            <if test="stock != null">
                stock = #{stock,jdbcType=INTEGER},
            </if>

            <if test="catId != null">
                cat_id = #{catId,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    <delete id="deleteById" parameterType="java.lang.Integer">
        delete
        from t_produce
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <select id="findAllProduce" resultMap="produceMap">
        select *
        from t_produce
    </select>

    <select id="findAllProduceByCat" resultMap="produceMap">
        select *
        from t_produce
        where cat_id = #{catId}
    </select>
    <!--    /*这里要使用 ${} 进行参数的直接注入*/-->
    <select id="findProducesByName" resultMap="produceMap">
        select *
        from t_produce
        where detail like #{name}
           or title like #{name};
    </select>
    <select id="findProduceById" resultMap="produceMap">
        select *
        from t_produce
        where id = #{id}
    </select>

    <select id="selectByPage" resultMap="produceMap">
        select *
        from t_produce
        limit #{jump},#{pageSize}
    </select>

    <select id="selectTotalCount" resultType="java.lang.Integer">
        select count(*)
        from t_produce
    </select>
    <select id="selectCommend" resultMap="produceMap">
        select *
        from t_produce
        order by rand()
        limit 0,10
    </select>


</mapper>